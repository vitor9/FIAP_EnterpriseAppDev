@model Fiap06.Web.MVC.Models.Bebida

@{
    ViewBag.Title = "Cadastrar";
}

<h2>Cadastrar</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(b => b.Nome)
        @Html.TextBoxFor(b => b.Nome)
    </div>

    <div class="form-group">
        @Html.CheckBoxFor(b => b.Destilado)
        @Html.LabelFor(b => b.Destilado)
    </div>

    <div class="form-group">
        @Html.LabelFor(b => b.Preco)
        @Html.TextBoxFor(b => b.Preco)
    </div>
    <input type="submit" value="Cadastrar" class="btn btn-primary" />
}